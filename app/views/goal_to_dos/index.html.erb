<h1>Listing goal_to_dos</h1>

<table>
  <thead>
    <tr>
      <th>Users</th>
      <th>Dream</th>
      <th>Goal</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal_to_dos.each do |goal_to_do| %>
      <tr>
        <td><%= goal_to_do.users_id %></td>
        <td><%= goal_to_do.dream %></td>
        <td><%= goal_to_do.goal %></td>
        <td><%= goal_to_do.date %></td>
        <td><%= link_to 'Show', goal_to_do %></td>
        <td><%= link_to 'Edit', edit_goal_to_do_path(goal_to_do) %></td>
        <td><%= link_to 'Destroy', goal_to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal to do', new_goal_to_do_path %>
